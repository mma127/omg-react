{
  "name": "node-es6",
  "version": "0.0.0",
  "private": true,
  "nodemonConfig": {
    "exec": "npm run build",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "start": "npm run prod",
    "transpile": "babel ./server --out-dir dist-server --source-maps",
    "clean": "rimraf dist-server",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist-server/bin/www",
    "dev": "NODE_ENV=development PORT=3001 npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "watch:dev": "nodemon",
    "test": "jest"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "app-root-path": "^3.0.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.6",
    "db-migrate-mysql": "^2.1.0",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "~4.16.1",
    "express-session": "^1.17.0",
    "fs": "0.0.1-security",
    "https": "^1.0.0",
    "morgan": "~1.9.1",
    "mysql": "^2.18.1",
    "mysql2": "^2.1.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "passport": "^0.4.1",
    "passport-openid": "^0.4.0",
    "passport-steam": "^1.0.12",
    "path": "^0.12.7",
    "rimraf": "^3.0.2",
    "sequelize": "^5.21.6",
    "sequelize-cli": "^5.5.1",
    "socket.io": "^2.5.0",
    "steam-web": "^0.7.0",
    "winston": "^3.2.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "devDependencies": {
    "@babel/polyfill": "^7.8.3",
    "core-js": "^3.6.4",
    "jest": "^24.9.0",
    "regenerator-runtime": "^0.13.3"
  }
}
